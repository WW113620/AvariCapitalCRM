@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Avari Capital CRM Login
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="~/Content/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/now-ui-kit.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/login.css" rel="stylesheet" />
    <link href="~/Content/dist/css/spectre-icons.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Assets/layuiadmin/layui/layui.js"></script>
    <script src="~/Scripts/common/public.js"></script>
    <style>
        .input-group {
            margin-bottom: 20px;
        }
    </style>
</head>

<body class="login-page sidebar-collapse">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-primary fixed-top navbar-transparent " color-on-scroll="400">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" style="cursor:pointer;" rel="tooltip" title="Designed by Invision. Coded by Creative Tim" data-placement="bottom">
                    Avari Capital CRM Login
                </a>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="page-header clear-filter" filter-color="orange">
        <div class="page-header-image" style="background-image:url('@Url.Content("/Content/dist/img/login.jpg")' display:none;"></div>
        <div class="content">
            <div class="container logontxt">
                <img src="~/Content/dist/img/logon.png"> Avari Capital CRM+
            </div>
            <div class="container loginFlex">
                <img src="~/Content/dist/img/loginimg.png" class="loginrightimg">
                <div class="card card-login card-plain">
                    <div class="card-header text-center" style="display:none;">
                        <div class="logo-container">
                            <img src="~/Content/dist/img/logo.png" alt="">
                        </div>
                    </div>
                    <h1 class="loginTxt">
                        Avari Capital CRM+
                    </h1>
                    <div class="contentTxt">
                        Administration Login
                    </div>
                    <div class="card-body" style="padding:0px;">
                        <h2 class="inputlittle">
                            User name
                        </h2>
                        <div class="input-group no-border input-lg">
                            <div class="input-group-prepend" style="display:none;">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16"><path fill="none" d="M0 0h24v24H0z" /><path d="M4 22a8 8 0 1 1 16 0h-2a6 6 0 1 0-12 0H4zm8-9c-3.315 0-6-2.685-6-6s2.685-6 6-6 6 2.685 6 6-2.685 6-6 6zm0-2c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z" fill="rgba(255,255,255,1)" /></svg>
                                </span>
                            </div>
                            <input type="text" placeholder="User Name" class="form-control" id="username">
                        </div>
                        <h2 class="inputlittle">
                            Password
                        </h2>
                        <div class="input-group no-border input-lg">
                            <div class="input-group-prepend" style="display:none;">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16"><path fill="none" d="M0 0h24v24H0z" /><path d="M19 10h1a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V11a1 1 0 0 1 1-1h1V9a7 7 0 1 1 14 0v1zM5 12v8h14v-8H5zm6 2h2v4h-2v-4zm6-4V9A5 5 0 0 0 7 9v1h10z" fill="rgba(255,255,255,1)" /></svg>
                                </span>
                            </div>
                            <input type="password" placeholder="Password" class="form-control" id="password" />
                        </div>
                        <h2 class="inputlittle">
                            Verification code
                        </h2>
                        <div class="input-group no-border input-lg">
                            <div class="input-group-prepend" style="display:none;">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16"><path fill="none" d="M0 0h24v24H0z" /><path d="M12.917 13A6.002 6.002 0 0 1 1 12a6 6 0 0 1 11.917-1H23v2h-2v4h-2v-4h-2v4h-2v-4h-2.083zM7 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" fill="rgba(255,255,255,1)" /></svg>
                                </span>
                            </div>
                            <input type="text" placeholder="Verification code" class="form-control" id="captchcode" />
                            <div class="pwd-pic">
                                <img src="@Url.Content("~/Admin/Account/GetCaptcha")" id="captchaimg" style="cursor:pointer;" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="javascript:;" class="btn btn-primary btn-round btn-lg btn-block newloginbtn" id="loginbtn">Login</a>
                        <div class="pull-left" style="display:none;">
                            <h6>
                                <a href="#" class="link">创建账户</a>
                            </h6>
                        </div>
                        <div class="pull-right" style="display:none;">
                            <h6>
                                <a href="#" class="link">忘记密码?</a>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        layui.use(['layer', 'laydate'], function () {
            var $ = layui.$
                , layer = layui.layer //弹层

                $("#captchaimg").click(function () {
                    GetCaptcha();
                });

                function GetCaptcha() {
                    var time = new Date().getTime();
                    $("#captchaimg").removeAttr("src").attr("src", '@Url.Content("~/Admin/Account/GetCaptcha")?t=' + time);
                }

                $(document).keyup(function(event){
                    if (event.keyCode == 13) {
                        login();
                    }
                });

                $("#loginbtn").click(function () {
                    login();
                });

              function login() {
                    var userName = StrTrim($("#username").val());
                    if (userName === "") {
                        layer.msg('Please enter your user name.', { icon: 5 });
                        return false;
                    }

                    var password = StrTrim($("#password").val());
                  if (password === "") {
                        layer.msg('Please enter your password.', { icon: 5 });
                        return false;
                    }

                    var captchcode = StrTrim($("#captchcode").val());
                  if (captchcode === "") {
                        layer.msg('Please enter verification code.', { icon: 5 });
                        return false;
                    }

                    var data = { "UserName": userName, "PassWord": password, "CaptchCode": captchcode };
                    $ajaxLoadingFunc("@Url.Content("~/Admin/Account/Verify")", data, function (res) {
                        if (res.code == 0) {
                            layer.msg("Login successfully", { time: 1000, offset: 'auto'}, function (index) {
                                layer.close(index);
                                location.href = "@Url.Content("~/Admin/Home/Index")";
                            });
                        } else {
                            //layer.msg(res.msg, { time: 1200, offset: 'auto', icon: 5 });
                            //GetCaptcha();
                            LayerAlert(res.msg);
                        }
                    })
                }

        })


      
    </script>
</body>

</html>